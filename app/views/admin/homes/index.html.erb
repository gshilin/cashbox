<div class="credit-title">
  <div class="container">
    <div class="credit-title-1 clearfix">
      <div class="logo"></div>
      <h1 class="title">הנהלה</h1>
    </div>
  </div>
</div>
<div class="main">
  <div class="container">
    <div class="main-content">
      <div class="row">
        <div class="col-sm-4">
          <table class="table table-bordered table-condensed table-striped">
            <tr>
              <th colspan="2">ס"כ</th>
            </tr>
            <tr>
              <td>כ"א</td>
              <td><%= '%.02f' % @totals[:cc] -%></td>
            </tr>
            <tr>
              <td>₪</td>
              <td><%= '%.02f' % @totals[:nis] -%></td>
            </tr>
            <tr>
              <td>$</td>
              <td><%= '%.02f' % @totals[:usd] -%></td>
            </tr>
            <tr>
              <td>€</td>
              <td><%= '%.02f' % @totals[:eur] -%></td>
            </tr>
          </table>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= link_to 'icount', admin_icount_flags_path, class: 'btn' -%>
          </div>
          <div class="form-group">
            <%= link_to 'קופות', admin_cashdesks_path, class: 'btn' -%>
          </div>
          <div class="form-group">
            <%= link_to 'דו"ח הכנסות', admin_incomes_path, class: 'btn' -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
